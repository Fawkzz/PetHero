<%- include("./partials/header") %>
<main>
    <div class="animation-area">
      <ul class="box-area">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>
    <div class="container" id="container_registrar">
        <div class="card" id="registrar_card">
            <div class="row">
                <form class="col s12" action="/login/registrarLogin" method="post">
                  <div class="row center">
                    <h1 class="center">CRIAR CONTA</h1>
                    <span>Será enviado uma confirmação no e-mail cadastrado.</span>
                  </div>
                  <% if(typeof alert != 'undefined'){ %>
                    <% alert.forEach(function(error){ %>
                      <div class="materialert error">
                        <div class="material-icons">error_outline</div>
                        <%= error.msg %>
                      </div>
                    <% }) %>
                  <% } %>
                  <div class="row">
                    <div class="input-field col s6 center">
                      <input id="nome" type="text" class="validate" name="nome">
                      <label for="nome">Nome</label>
                    </div>
                    <div class="input-field col s6 center">
                        <input id="sobrenome" type="text" class="validate" name="sobrenome">
                        <label for="sobrenome">Sobrenome</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s4 center">
                        <input id="cpf" type="text" class="validate" name="cpf">
                        <label for="cpf">CPF</label>
                    </div>
                    <div class="input-field col s4 center">
                        <input id="celular" type="text" class="validate" name="celular">
                        <label for="celular">Celular</label>
                    </div>
                    <div class="input-field col s4 center">
                      <input id="data" type="date" class="validate" name="data">
                      <label for="data">Data de Nascimento</label>
                    </div>                    
                  </div>

                  <div class="row">
                    <div class="input-field col s6 center">
                      <input id="email" type="email" class="validate" name="email">
                      <label for="email">Email</label>
                    </div>
                    <div class="input-field col s6 center">
                        <input id="confirmationEmail" type="email" class="validate" name="confirmationEmail">
                        <label for="confirmationEmail">Confirmar Email</label>
                      </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s6">
                      <input id="password" type="password" class="validate" name="password">
                      <label for="password">Senha</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="confirmationPassword" type="password" class="validate" name="confirmationPassword" >
                        <label for="confirmationPassword">Confirmar Senha</label>
                      </div>
                  </div>
                  <div id="noticia" class="row">
                    <label>
                        <input type="checkbox" />
                        <span>Deseja receber noticias e novidades?</span>
                    </label>
                  </div>
                  <div class="row" id="botoes_registrar">                  
                    <a href="../login" class="waves-effect teal lighten-2  btn">Voltar</a>                    
                    <button class="waves-effect blue darken-1 btn" type="submit">Confirmar</button>
                  </div>              
                </form>
              </div>
        </div>
    </div>    
</main>

<%- include("./partials/footer") %>