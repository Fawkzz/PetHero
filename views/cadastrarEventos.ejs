<%- include("./partials/header") %>
<main>
    <div class="animation-area">
      <ul class="box-area">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>
    <div class="container" id="container_eventos"> 
      <div class="card" id="registrar_card_eventos"> 
      
          <% if(typeof alert != 'undefined'){ %>
            <% alert.forEach(function(error){ %>
              <div class="materialert error">
                <div class="material-icons">error_outline</div>
                <%= error.msg %>
              </div>
            <% }) %>
          <% } %>
            <div class="row">
              <form class="col s12" method="post" action="/eventos/cadastrar" enctype="multipart/form-data">
                <div class="row center">
                  <h1 class="center">Cadastrar Eventos</h1>
                  <p>Preencha todas os campos para registrar seu evento em nosso website.</p>                 
                </div>
                <div class="row">
                  <div class="input-field col s6 center">
                    <input id="titulo" type="text" class="validate" name="titulo" required maxlength="40">
                    <label for="titulo">Nome do Evento</label>
                  </div>
                  <div class="input-field col s6 center">
                      <input id="data" type="date" class="validate" name="data" required>
                      <label for="data">Data do Evento</label>
                    </div>                     
                </div>
                <div class="row">
                  <div class="input-field col s4 center">
                    <input id="pais" type="text" class="validate" name='pais' required maxlength="40">
                    <label for="pais">País</label>
                  </div>
                  <div class="input-field col s4 center">
                      <input id="cidade" type="text" class="validate" name='cidade' required maxlength="40">
                      <label for="cidade">Cidade</label>
                  </div>
                  <div class="input-field col s4 center">
                      <input id="local" type="text" class="validate" name="local" required maxlength="40">
                      <label for="local">Local</label>
                  </div>
                  
                </div>
                <div class="row">                    
                  <div class="input-field col s6 center">
                      <select id="periodicidade" name="periodicidade" required>
                        <option value="" disabled selected>Periodicidade</option>
                        <option value="Anaual">Anaual</option>
                        <option value="Semestral">Semestral</option>
                        <option value="Trimestral">Trimestral</option>
                        <option value="Bimensal">Bimensal</option>
                        <option value="mensal">Mensal</option>
                      </select>
                  </div>
                  <div class="input-field col s6 center" >
                      <select id="Alcance" name="alcance" required>
                        <option value="" disabled selected>Alcance</option>
                        <option value="Nacional">Nacional</option>
                        <option value="Internacional">Internacional</option>
                      </select>
                  </div>                
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <select multiple id="setores" name="setores" required>
                      <option value="" disabled selected>Setores</option>
                      <option value="Agrícola">Agrícola</option>
                      <option value="Animais de Estimaçao">Animais de Estimaçao</option>
                      <option value="Aditivos">Aditivos</option>
                      <option value="Alimentos Orgânicos">Alimentos Orgânicos</option>
                      <option value="Indústria da Alimentação">Indústria da Alimentação</option>
                      <option value="Pecuária">Pecuária</option>
                      <option value="Exposição de Animais">Exposição de Animais</option>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <textarea id="descricao" class="materialize-textarea" name="descricao" required></textarea>
                    <label for="descricao">Descrição</label>
                  </div>
                </div>
                <div class="file-field input-field">
                  <div class="btn">
                    <span class="logo_span">Logo</span>
                    <input type="file">
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate" type="text"  name="logo" multiple required>
                  </div>
                </div>   
                <div class="row" id="botoes_registrar">                  
                  <a href="../eventos/listar" class="waves-effect teal lighten-2  btn">Voltar</a>
                  <button type="submit" class="waves-effect blue darken-1 btn"> Confirmar</button>
                </div>              
              </form>
            </div>
      </div>
    </div>
</main>
<%- include("./partials/footer") %>