<%- include("./partials/header") %>
<main>
    <div class="animation-area">
      <ul class="box-area">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>
    <div class="container" id="container_eventos">
        <div class="card" id="registrar_card_eventos">
            <div class="row">
                <form class="col s12" method="post" action="/criarOng">
                  <div class="row center">
                    <h1 class="center">Cadastrar Ongs</h1>
                    <p>Preencha todas os campos para registrar sua Ong em nosso website.</p>
                  </div>
                  <div class="row">
                    <div class="input-field col s6 center">
                      <input id="ong" type="text" class="validate" name="ong" required>
                      <label for="ong">Nome da Ong</label>
                    </div>
                    <div class="input-field col s6">
                        <select multiple required>
                          <option value="" disabled selected>Especie</option>
                          <option value="1">Cachorro</option>
                          <option value="2">Gato</option>
                        </select>
                    </div>                    
                  </div>
                  <div class="row">
                    <div class="input-field col s4 center">
                      <input id="nome" type="text" class="validate" name='nome' required>
                      <label for="nome">Nome</label>
                    </div>
                    <div class="input-field col s4 center">
                        <input id="sobrenome" type="text" class="validate" name='sobrenome' required>
                        <label for="sobrenome">Sobrenome</label>
                    </div>
                    <div class="input-field col s4 center">
                        <input id="email" type="text" class="validate" name="email" required>
                        <label for="email">Email</label>
                    </div>                                       
                  </div>
                  <div class="row">
                    <div class="input-field col s3 center">
                      <input id="telefone" type="text" class="validate" name='telefone' required>
                      <label for="telefone">Telefone</label>
                    </div>
                    <div class="input-field col s3 center">
                      <input id="cep" type="text" class="validate" name='cep' required>
                      <label for="cep">CEP</label>
                    </div>
                    <div class="input-field col s3 center">
                        <input id="estado" type="text" class="validate" name='estado' required>
                        <label for="estado">Estado</label>
                    </div>
                    <div class="input-field col s3 center">
                        <input id="cidade" type="text" class="validate" name="cidade" required>
                        <label for="cidade">Cidade</label>
                    </div>                                                      
                  </div>
                  <div class="row">
                    <div class="input-field col s6 center">
                        <input id="bairro" type="text" class="validate" name="bairro" required>
                        <label for="bairro">Bairro</label>
                    </div>  
                    <div class="input-field col s6 center">
                        <input id="logradouro" type="text" class="validate" name="logradouro" required>
                        <label for="logradouro">Logradouro</label>
                    </div>                               
                  </div>
                  <div class="row">
                    <div class="input-field col s6 center">
                        <input id="numero" type="text" class="validate" name="numero" required>
                        <label for="numero">Numero</label>
                    </div>  
                    <div class="input-field col s6 center">
                        <input id="complemento" type="text" class="validate" name="complemento">
                        <label for="complemento">Complemento</label>
                    </div>                                    
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                        <textarea id="descricao" class="materialize-textarea" name="dedscricao"></textarea>
                        <label for="descricao"1>Descrição</label>
                    </div>
                  </div>
                  <div class="file-field input-field">
                    <div class="btn">
                      <span class="logo_span">Logo</span>
                      <input type="file" required>
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text">
                    </div>
                  </div>
                  <div class="row" id="botoes_registrar">                  
                    <a href="../ongs/listar" class="waves-effect teal lighten-2  btn">Voltar</a>
                    <button class="waves-effect blue darken-1 btn"> Confirmar</button>
                  </div> 
                </form>
            </div>
        </div>
    </div>
</main>

<%- include("./partials/footer") %>