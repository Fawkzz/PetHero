<%- include("./partials/header") %>
<main>
    <div class="animation-area">
      <ul class="box-area">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>
    <div class="container" id="container_registrar">
        <div class="card" id="registrar_card">
            <div class="row">
                <form class="col s12" action="/login/registrarLogin" method="post">
                  <div class="row center">
                    <h1 class="center">ENTRE EM CONTATO</h1>
                    <span>Entre contato conosco que em breve iremos retorna.</span>
                  </div>
                  <% if(typeof alert != 'undefined'){ %>
                    <% alert.forEach(function(error){ %>
                      <div class="materialert error">
                        <div class="material-icons">error_outline</div>
                        <%= error.msg %>
                      </div>
                    <% }) %>
                  <% } %>
                  <div class="row">
                    <div class="input-field col s12 center">
                      <input id="nome" type="text" class="validate" name="nome">
                      <label for="nome">Nome</label>
                    </div>
                    <div class="input-field col s12 center">
                        <input id="sobrenome" type="text" class="validate" name="sobrenome">
                        <label for="sobrenome">Sobrenome</label>
                    </div>
                    <div class="input-field col s12 center">
                        <input id="email" type="text" class="validate" name="email">
                        <label for="email">Email</label>
                    </div>
                    <div class="input-field col s12 center">
                        <input id="telefone" type="text" class="validate" name="telefone">
                        <label for="telefone">Telefone</label>
                    </div>
                  </div>
                
                  <div class="row" id="botoes_registrar">                  
                    <a href="../" class="waves-effect teal lighten-2  btn">Voltar</a>                    
                    <button class="waves-effect blue darken-1 btn" type="submit">Confirmar</button>
                  </div>              
                </form>
              </div>
        </div>
    </div>    
</main>

<%- include("./partials/footer") %>